---
interface Props {
  title: string;
}

const { title = "Blog Posts" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Feed discovery -->
    <link
      rel="alternate"
      type="application/atom+xml"
      title="Blog Feed"
      href="/atom.xml"
    />

    <!-- Optional feed metadata -->
    <meta
      name="description"
      content="My developer blog covering TypeScript, React, and web development."
    />
    <meta name="author" content="Your Name" />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
